{
  "name": "onlinejudge-backend",
  "version": "1.0.0",
  "description": "backend server build with koa2, for onlinejudge",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "scripts": {
    "start": "yarn build && node dist/index.js",
    "watch": "nodemon dist/index.js",
    "build": "webpack",
    "dev": "webpack -w",
    "build:prod": "webpack --env=production",
    "lint": "eslint --ext=.ts src",
    "lint:fix": "yarn lint --fix && git add -A",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yedeying999/onlinejudge-backend"
  },
  "keywords": [
    "koa",
    "onlinejudge"
  ],
  "author": "yedeying",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yedeying999/onlinejudge-backend/issues"
  },
  "homepage": "https://github.com/yedeying999/onlinejudge-backend#readme",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-csrf": "^3.0.8",
    "koa-generic-session": "^2.0.4",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.3",
    "koa-redis": "^4.0.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mysql": "^2.17.1",
    "passport-local": "^1.0.0",
    "ts-loader": "^6.2.1",
    "uuid": "^3.4.0",
    "webpack": "^4.41.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-csrf": "^3.0.1",
    "@types/koa-generic-session": "^1.0.3",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-redis": "^4.0.0",
    "@types/koa-router": "^7.4.0",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^3.0.1",
    "@types/mysql": "^2.15.8",
    "@types/passport-local": "^1.0.33",
    "@types/uuid": "^3.4.6",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-standard-ye": "^1.1.1",
    "eslint-config-standard-ye-ts": "^1.1.1",
    "husky": "^4.0.10",
    "lint-staged": "^10.0.1",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  }
}
